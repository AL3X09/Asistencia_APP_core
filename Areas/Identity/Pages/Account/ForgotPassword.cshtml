@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar su contraseña";
}

<div class="row">
    <div class="col-md-12 col-sm-12" align="center">
        <div class="card shadow-lg p-3 mb-5 bg-white border-primary mb-3" style="width: 35rem; background-image: url('https://images.pexels.com/photos/1478524/pexels-photo-1478524.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940'); ">
            <!--<div class="card shadow-lg p-3 mb-5 bg-white border-primary mb-3" style="width: 35rem; background-image: url('@Url.Content("~/images/tema.png")');">-->

            <div class="card-body ">
                <h1 class="card-title">@ViewData["Title"]</h1>
                
                <div class="col-md-12 col-sm-12">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.usuario"></label>
                            <input asp-for="Input.usuario" class="form-control" />
                            <span asp-validation-for="Input.usuario" class="text-danger"></span>
                        </div>
                        <!--<div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>-->
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
