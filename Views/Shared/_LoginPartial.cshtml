@using Microsoft.AspNetCore.Identity
@using asistencia_rips_APP.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="btn btn-outline-success me-2" type="button" asp-controller="Home" asp-action="Index">Tablero</a>
        </li>

    }

</ul>

<ul class="navbar-nav text-center">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Usuario: <h4>@User.Identity.Name</h4></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger me-2">Salir</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-info" asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
        </li>
        <li class="nav-item">
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
    }
</ul>
